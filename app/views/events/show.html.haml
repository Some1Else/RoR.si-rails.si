- content_for :javascripts do
  = event_map @event

= title @event.title
.details
  %p.location
    = @event.location
  %p.date
    = l @event.date, :format => :simple

  .description
    = @event.cached_description_html

- if current_user and current_user.owns_event?(@event)
  .crud
    %p= link_to 'Uredi', edit_event_path(@event)

/ #map
