- content_for :javascripts do
  = event_map @next_event

#events
  .ribbon
    .row
      .crud
        %p= link_to 'Nov dogodek', new_event_path

      %h2 Dogodki
      - unless @events.empty?
        - @events.each do |event|
          .quarter>
            %p.date
              %span= event.date.to_s(:fancy_date)
              %span= event.date.to_s(:time)
            %h3= link_to h(event.title), event
            %p= truncate_html event.cached_description_html, :omission => "... #{link_to 'Beri dalje...', event}"

        = will_paginate @events
      - else
        %p Nič ne dogaja.
