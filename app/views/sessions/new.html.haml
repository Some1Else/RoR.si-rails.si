= title "Prijava"

- form_for :session, :url => session_path do |form|
  .personals
    %p
      = form.label :email
    %p
      = form.text_field :email
    %p
      = form.label :password, "Geslo"
    %p
      = form.password_field :password
  .elsewheres
    %p
      &nbsp;
    %p
      = form.check_box :remember_me
      = form.label :remember_me, "Hočem piškotek"
    %p
      &nbsp;
    .buttons
      = form.submit "Prijava", :disable_with => "Prosimo počakajte..."