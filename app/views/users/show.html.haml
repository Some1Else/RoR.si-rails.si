= title @user
.avatar= image_tag @user.gravatar_url(:size => 210)

.moreinfo
  .about= @user.about
  %dl
    - if @user.homepage?
      %dt.homepage Domača stran:
      %dd.homepage= link_to_self @user.homepage
    - if @user.linkedin?
      %dt.linkedin Linked in:
      %dd.linkedin= link_to_self @user.linkedin
    - if @user.twitter?
      %dt.twitter Twitter:
      %dd.twitter= link_to_twitter @user.twitter
    - if @user.github?
      %dt.github Github:
      %dd.github= link_to_github @user.github

#topics
  %h2 Diskusije
  %ol#posts
    - @user.posts.limited(5).each_with_index do |post, i|
      %li{:class => "post post_#{i}"}
        %h3= link_to post.topic, topic_posts_path(post.topic, :anchor => post.anchor, :page => post.page)
        %p.trunc= truncate(strip_tags(post.cached_body_html), 200)
        %p.date=l post.created_at, :format => :simple
#blogs
  %h2 Blogi
  - if @user.feed
    %ol#entries= render @user.feed.entries.limited(15)
#twitter
  %h2 Tweeti
  %ol#tweets= render @user.tweets.limited(15)
