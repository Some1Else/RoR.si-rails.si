= title "Nova diskusija"
= error_messages_for :topic

- form_for @topic do |form|
  %fieldset
    %p
      = form.label :title, "Naziv"
    %p
      = form.text_field :title
      
    - form.fields_for :posts do |post_form|
      %p
        = post_form.hidden_field :user_id
        = post_form.label :body, "Besedilo"
      %p
        = post_form.text_area :body
      %p.instruct
        == Oblikuj besedilo z #{link_to 'Markdown', 'http://daringfireball.net/projects/markdown/syntax'}.
    
        
    .buttons
      %p= form.submit 'Shrani', :disable_with => 'Prosimo počakajte...'
